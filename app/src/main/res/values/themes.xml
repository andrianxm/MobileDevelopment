<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SkinCure" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="cardBackgroundColor">@color/bg_card_light</item>
        <item name="strokeColor">@color/black</item>
        <item name="background">@drawable/background_gradient_light</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="colorSurface">@color/primary</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00000000</item>
    </style>
    
    <style name="Theme.SkinCure" parent="Base.Theme.SkinCure">

    </style>

    <style name="Theme.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primary</item>

        <item name="android:textColor">@android:color/white</item>

        <item name="android:padding">12dp</item>

        <item name="android:textSize">16sp</item>
    </style>
</resources>